<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".LogIn">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#8B000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="283dp"
                    app:srcCompat="@drawable/loginadmin" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp" />

                <TextView
                    android:id="@+id/headLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:text="Quiz Master"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_style"
                    android:drawableStart="@drawable/custom_person"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:hint="Name"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_style"
                    android:drawableStart="@drawable/custom_email"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="italic"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_style"
                    android:drawableStart="@drawable/custom_lock"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/passforget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/acme"
                    android:gravity="right"
                    android:text="Forget Password?"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="25dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="75dp"
                    android:background="@drawable/btngradient"
                    android:text="Log In"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>